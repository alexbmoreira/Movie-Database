<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="150.0" prefWidth="450.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Movie Database" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <HBox alignment="TOP_CENTER" spacing="20.0">
               <children>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#chooseFile" prefHeight="25.0" prefWidth="200.0" text="Import save data" textAlignment="CENTER" wrapText="true" />
                        <Label id="error-label" fx:id="errorLabel" alignment="CENTER" prefHeight="25.0" prefWidth="200.0" text="                        " wrapText="true" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#createDatabase" prefHeight="25.0" prefWidth="200.0" text="Create New Database" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
